{
  "source": {
    "include": ["README.md", "lib/", "lib/kit/", "lib/instruments/"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "node_modules|build|dist"
  },
  "templates": {
    "default": {
      "outputSourceFiles": false
    },
    "cleverLinks": true,
    "monospaceLinks": true,
    "systemName": "tonal",
    "systemSummary": "A functional music theory library",
    "footer": "tonal",
    "copyright": "MIT License",
    "navType": "vertical",
    "inlineNav": true,
    "theme": "spacelab",
    "linenums": true,
    "collapseSymbols": false,
    "inverseNav": false,
    "showTableOfContents": true
  },
  "opts": {
    "destination": "./docs/api/",
    "recurse": true,
    "verbose": true,
    "template4": "./node_modules/latodoc",
    "template3": "./node_modules/foodoc/template",
    "template2": "./node_modules/jaguarjs-jsdoc-patched-2",
    "template": "./node_modules/postman-jsdoc-theme"
  },
  "plugins": ["plugins/markdown"]
}
